<% layout("/layots/boilerplate") %>
<body>
    <h1 style="position: relative; left: 2rem; margin-bottom: 1rem;"><b>All Listings</b></h1>
    <ul>
       <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let listing of allListings){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="listing-card card col" style="cursor: pointer;">
                <img src="<%= listing.image.url%>" class="card-img-top" alt="" style="height: 18rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title%></b> <br>
                    <span>&#8377;</span> <%= listing.price.toLocaleString("en-IN") %>/&nbsp;night
                  </p>
                </div>
              </div>
            </a>
        <%}%>
    </div>
    </ul>
</body>




