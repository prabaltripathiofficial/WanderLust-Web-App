<% layout("/layots/boilerplate") %>
<body>
<div class="row">
    <div class="col-8 offset-2">
        <h1><b>Edit Your Listing</b></h1>
        <form action="/listings/<%= foundListing._id %>?_method=put" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3"><label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" name="title" id="title" value="<%=foundListing.title%>" required>
                <div class="invalid-feedback">Title is needed</div>
            </div>
            
            
           <div class="mb-3"> 
            <label class="form-label" for="description">Description:</label>
            <textarea name="description" id="description" class="form-control" required style="resize: none;"><%= foundListing.description %></textarea>
        <div class="invalid-feedback">Description is needed</div>
        </div>

        
        <div class="original_image mb-3">
            <p>Original Image</p>
            <img src= <%= newurl %> alt="">
        </div>
            
           <div class="mb-3"><label class="form-label" for="image">Upload New Image</label>
            <input class="form-control" type="file" name="image" id="image" value="<%=foundListing.image%>">
        </div>
            
         <div class="row">
            <div class="mb-3 col-md-4">
                <label class="form-label" for="price">Price:</label>
             <input class="form-control" type="number" name="price" id="price" value="<%=foundListing.price%>" required>
             <div class="invalid-feedback">Price is Required</div>
         </div>
             
             <div class="mb-3 col-md-8">
                 <label class="form-label" for="location">Location:</label>
                 <input class="form-control" type="text" id="location" name="location" value="<%=foundListing.location%>" required>
                 <div class="invalid-feedback">Location is Required</div>
                </div>
         </div>
            
           <div class="mb-3"> <label class="form-label" for="country">Country:</label>
            <input class="form-control" type="text" name="country" id="country" value="<%=foundListing.country%>" required>
        <div class="invalid-feedback">Country is needed</div>
        </div>
            
            <button class="btn btn-dark" style="display: block; margin:3rem auto 1rem auto; background-color: #fe424d; border: none; color: white;">Edit</button>
        </form>
    </div>
</div>
</body>